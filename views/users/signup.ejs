<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on PathWander</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input
                      type="text"
                      id="username"
                      name="username"
                      class="form-control"
                      required
                    />
               </div>
               <div class="mb-3">
               <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  required
                />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                 <input
                   name="password"
                   type="password"
                   id="password"
                   class="form-control"
                   required
                 />
             </div>
             <button class="btn btn-success">SignUp</button>
        </form>
    </div>
 </div>